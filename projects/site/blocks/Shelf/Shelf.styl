.Shelf
   margin 0px 4px
   padding-bottom 4px
   a
       display block
       text-decoration none
   
   &__cols
       display table
       width 100%
   
   &__dot
        size = 26px
        height size
        width size
        border-radius 100%
        left 16px
        top 16px
        position absolute
        @media screen-phone
          size = 20px
          height size
          width size
   &__num
        position absolute
        right 16px
        top 16px
        z-index 9999
   &__item
        padding 70px 22px 66px 22px
        border-radius 20px 20px 0 0
        position relative
        margin-top 2px
        
        &:hover
            cursor pointer
       
        &_size
            &_L
                padding 300px 22px 36px 22px
                border-radius 20px
                @media screen-phone
                  padding 220px 22px 36px 22px
                
            &_High
                width 30.1%
                display inline-block
                padding 180px 20px 180px 20px
                border-radius 20px
                margin-bottom 2px
                & + &
                    margin-left 2px
                    
                .Shelf
                    &__title
                        text-align center
                        font-size 50px
                        
                        
        
                   
       
        &_Last
            border-radius 20px 20px 20px 20px
        &_Margin
            & + &
                margin-top -30px
           
    &__subtitle
        @media screen-phone
            margin-top 14px
        font-size 22px
        letter-spacing -1px