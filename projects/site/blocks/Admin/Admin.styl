.Admin
    
    gap = 2px
    control = 100px

    margin 80px 0 80px 0
    // font-size 28px
    	
    font-family Arial
    letter-spacing -0.4px
    font-size 20px
    line-height 25px
    
    @media screen-phone
        font-size 22px

    letter-spacing -1.4px

    @media screen-phone
        margin 60px 2px 2px 2px
    
    ::placeholder
        color var(--formPlaceholder)

    :-ms-input-placeholder
        color var(--formPlaceholder)

    ::-ms-input-placeholder
        color var(--formPlaceholder)
    
    form
        margin 70px 20px 20px 20px
        
    input
    	
        border 0
        outline 0
        // font-size 28px
        font-size 20px
        @media screen-phone
            font-size 22px
        // letter-spacing -1.4px
        // font-family GT Walsheim Pro
        -webkit-appearance none
        &:focus, &:active
            border 0
            outline 0
        &.form__upload-input[type="file"]
            display none
    &__form
    	position relative
    	padding 40px
    	background #ffffff1f
    	max-width 860px
    	border-radius 30px
    	margin 0 auto
		
		
    	
		
		
    &__head
        margin 8px 20px
        position relative
    &__title, &__hint
        /*font-size 45px
        line-height 39px
        letter-spacing -3px*/
    &__hint
        position absolute
        right 0
        top 0
        @media screen-phone
            position relative
            opacity .6
    &__input
        width 100%
        height control
        line-height control
        @media screen-phone
            height 80px
            line-height 80px
        text-align left
        
        padding 0 16px
        & + &
            margin-left gap
            @media screen-phone
                margin-left 0
                margin-top gap
    &__button
        width 50%
        @media screen-phone
            width initial
        height 100px
        text-align center
        line-height 100px
        @media screen-phone
            height 80px
            line-height 80px
        cursor pointer
        &_select
            &[active="true"]
                background var(--formHighlight) !important
                color #fff !important
            
        & + &
            margin-left gap
            @media screen-phone
                margin-left 0
                margin-top gap
    &__item
        display inline-flex
        width 100%
        .Link
            border 0
        @media screen-phone
            display block
        & + &
            margin-top gap
            
        &_color
            background #f2f2f2
            padding 15px 14px
    &__action
        padding 70px 0
        &-subtitle
            opacity .3
            margin-top 5px
        background-color #222222
        color #D4D4D4
        width 100%
        border-radius 20px
        // line-height 213px
        @media screen-phone
            // line-height 160px
        text-align center
        margin 0 2px 2px 2px
        @media screen-phone
            margin 0
        cursor pointer
    &__disabled
        cursor default !important
        opacity .5
	
	&__logo
        margin-top 64px
        height 60px
        margin-left 20px
        mask-image url('/assets/logo.svg')
        mask-size 180px
        mask-repeat no-repeat
        background-color var(--text)

	.admin__serviceTitle
		margin-left: 20px

	.admin__priceTitle
		position absolute
		right 20px

	.admin__separator
		width 100%
		position block
		height 1px
		background #fff
		opacity .3
		margin 20px
		box-sizing border-box
	
	.admin__addservice
		background #fff
		color #aaa
		text-align center
		padding 24px
		border-radius 48px
		z-index 9
		position fixed
		letter-spacing -1.4px
		bottom 100px
		font-size 28px
		right 50px
		font-family 'GT Walsheim Pro'
		
		&:hover
			cursor pointer

	// .admin__addservice:hover
	// 	cursor pointer
	
	.admin__services
   		display: block
    	width: 100%

	.admin__service
		margin 20px
		width 100%
		position relative
		border-bottom 1px solid rgba(255, 255, 255, .3)
		padding-bottom 40px
		flex-shrink: 0;
	.admin__service:first-child
		margin-top 60px
	input.admin__servicename,
	input.admin__servicename:focus,
	input.admin__detailsvalue,
	input.admin__detailsvalue:focus,
	input.admin__serviceprice,
	input.admin__serviceprice:focus,
	input.admin__summaryprice,
	input.admin__summaryprice:focus,
	input.admin__deadlinedate,
	input.admin__deadlinedate:focus {
		// background none
		// border-bottom 1px solid rgba(0,0,0,0.3)
		color #fff
		background #ffffff1a
		width 50%
		padding 14px 22px
		border-radius 40px
	}

	input.admin__servicename
		margin-top 10px
		margin-bottom 40px

	input.admin__serviceprice,
	input.admin__serviceprice:focus,{
		width: 20%
		position absolute
		right 40px
		text-align right
	}

	input.admin__deadlinedate,
	input.admin__deadlinedate:focus  {
		width 300px
	}

	input.admin__summaryprice,
	input.admin__summaryprice:focus, {
		width: 20%
		position absolute
		right 20px
		margin-top 60px
		text-align right
	}

	.admin__detailstitle,
	input.admin__detailsvalue
		display block
	.admin__deadlinedate,
	input.admin__deadlinedate
		display inline-block

	input.admin__detailsvalue
		margin-top 10px
		margin-bottom 40px

	.admin__details
		margin-top 40px
		
	.admin__row
		margin 10px 0

	.admin__summary
	    display: -webkit-inline-flex;
    	display: inline-flex;
    	width: 100%;

	.admin__summarytitle
		position absolute
		right 20px
	
	.admin__deadline
		margin-top 150px
		margin-bottom 40px
		padding-left 20px


	.admin__deadlinetitle
		display inline-block
	.admin__serviceremove:hover
		cursor pointer
		text-decoration underline
