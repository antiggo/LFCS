.Steps
    margin 40px 20px 0 20px
    letter-spacing -1.4px
    &__items
        display inline-flex
        width 100%
        @media screen-phone
            display block
        
    &__step
        width 100%
        & + &
            margin-left 16px
            @media screen-phone
                margin-left 0
                margin-top 32px

    &__num
        text-align center
        font-size 106px
        font-weight 100
        padding 10px 0
        border-radius 20px
        
    &__text
        font-size 22px
        line-height 24px
        margin-top 8px