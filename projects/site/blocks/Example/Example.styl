.Example
	background #B7B7B7
	font-family input-mono, monospace

	font-weight 400

	font-style normal
	margin-bottom 40px
	font-size 15px
	margin 40px 20px
	color #535353
	padding 40px
	border-radius 20px
	
	&__col
		@media screen-phone
			width initial
			& + &
				margin-top 40px
		width 50%
		&:nth-child(1)
			@media screen-phone
				margin-right 0
			margin-right 20px
		&:nth-child(2)
			margin-left 20px
			@media screen-phone
				margin-left 0
	
	&__title
		margin-bottom 10px
		text-transform uppercase
		font-size 22px
	&__wrap
		display inline-flex
		@media screen-phone
			display initial
	&__text
		display inline-block
		@media screen-phone
			width initial
			margin-right 0
		line-height 22px
	&__remark
		display inline-block
		width 19%
		
		@media screen-phone
			width initial
			margin-top 40px
		vertical-align top
		font-size 13px
		
	&__m
		display inline
		background #818181
		color #c5c5c5